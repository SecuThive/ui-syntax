generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Component {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  variant     String
  code        String   @db.Text
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([category, variant])
  @@index([category])
  @@index([status])
}
